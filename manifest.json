{
  "manifest_version": 3,
  "name": "Phishing Link Blocker",
  "version": "1.0",
  "description": "Blocks phishing links using a custom API.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
